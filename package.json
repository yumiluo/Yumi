{
  "name": "vr-multi-device-system",
  "version": "1.0.0",
  "description": "VR多設備視頻播放系統 - 前後端一體化",
  "private": true,
  "scripts": {
    "build": "next build",
    "build:fast": "NEXT_TELEMETRY_DISABLED=1 next build",
    "dev": "next dev",
    "start": "next start",
    "lint": "next lint",
    "vr": "node server/enhanced-vr-server.js",
    "scanner": "node server/device-scanner-server.js",
    "dev:all": "concurrently \"npm run dev\" \"npm run vr\" \"npm run scanner\"",
    "start:all": "concurrently \"npm run start\" \"npm run vr\" \"npm run scanner\"",
    "deploy:vercel": "vercel --prod",
    "deploy:docker": "docker build -t vr-system . && docker run -d -p 3000:3000 -p 3001:3001 --name vr-system vr-system",
    "docker:build": "docker build -t vr-system .",
    "docker:run": "docker run -d -p 3000:3000 -p 3001:3001 --name vr-system --restart unless-stopped vr-system",
    "docker:stop": "docker stop vr-system && docker rm vr-system",
    "docker:logs": "docker logs -f vr-system"
  },
